{
  "name": "@asmartbear/continuum",
  "version": "1.7.1",
  "description": "Generates strings that sort between other strings",
  "keywords": [
    "diff"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest --maxWorkers=4",
    "watch": "npm test -- --watch --coverage",
    "coverage": "npm test -- --coverage",
    "clean": "rimraf dist *.tsbuildinfo .tsbuildinfo coverage",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prerelease": "npm run lint && npm test && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@asmartbear/testutil": "*",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "benchmark": "2.1.4",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/ts-monorepo.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/ts-monorepo/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.js",
  "files": [
    "dist/src"
  ],
  "types": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "composite": false
          }
        }
      ]
    },
    "testRegex": "test/.*\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "^@asmartbear/(.*)$": "<rootDir>/../$1/src"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ],
      "@babel/preset-flow",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}