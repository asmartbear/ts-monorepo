{
  "name": "@asmartbear/distributed-logical-time",
  "version": "1.0.5",
  "description": "Typescript implementation of the Distributed Logical Time algorithm",
  "keywords": [
    "distributed",
    "time"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "watch": "npm test -- --watchAll --coverage",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "main": "tsc && node dist/index.js",
    "minify": "uglifyjs --compress --mangle --output dist/index.min.js -- dist/index.js",
    "postbuild": "npm run minify",
    "prerelease": "npm test && npm run build",
    "prepare": "npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin main --follow-tags"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "benchmark": "2.1.4",
    "jest": "^30.2.0",
    "open-cli": "6.0.1",
    "rimraf": "2.6.3",
    "standard-version": "6.0.1",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "tslint": "6.1.1",
    "uglify-js": "3.13.8"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/distributed-logical-time.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/distributed-logical-time/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.min.js",
  "files": [
    "dist"
  ],
  "types": "dist",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "test/.*\\.(ts|tsx|js)$"
  }
}
