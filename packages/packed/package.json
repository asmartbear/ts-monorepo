{
  "name": "@asmartbear/packed",
  "version": "1.0.3",
  "description": "Serialize to a package byte-buffer",
  "keywords": [
    "serialize",
    "marshall"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "watch": "npm test -- --watchAll --coverage",
    "coverage": "npm test -- --coverage",
    "clean": "rimraf dist *.tsbuildinfo .tsbuildinfo coverage",
    "prebuild": "npm run clean",
    "build": "tsc",
    "main": "tsc && node dist/index.js",
    "prerelease": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "benchmark": "2.1.4",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@asmartbear/continuum": "*"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/ts-monorepo.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/ts-monorepo/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "composite": false
          }
        }
      ]
    },
    "testRegex": "test/.*\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "^@asmartbear/(.*)$": "<rootDir>/../$1/src"
    }
  }
}