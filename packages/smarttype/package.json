{
  "name": "@asmartbear/smarttype",
  "version": "1.0.17",
  "description": "Data types that parse, validate, transform, marshal, compare, and hash",
  "keywords": [
    "json"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "watch": "npm test -- --watchAll",
    "watch-cov": "npm test -- --watchAll --coverage ",
    "coverage": "npm test -- --coverage",
    "clean": "rimraf dist *.tsbuildinfo coverage",
    "prebuild": "npm run clean",
    "build": "tsc",
    "main": "tsc && node dist/index.js",
    "prerelease": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "benchmark": "^2.1.4",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@asmartbear/simplified": "*"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/ts-monorepo.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/ts-monorepo/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "cache": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "composite": false
          }
        }
      ]
    },
    "testRegex": "test/.+\\.test\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test/"
    ],
    "moduleNameMapper": {
      "^@asmartbear/(.*)$": "<rootDir>/../$1/src"
    }
  }
}